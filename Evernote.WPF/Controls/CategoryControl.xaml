<UserControl x:Class="Evernote.WPF.Controls.CategoryControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evernote.WPF.Controls"
             mc:Ignorable="d" 
             BorderBrush="Gray"
             d:DesignHeight="20">
    <Grid>
        <TextBox Name="CatName" Text="Новая Категория" 
              HorizontalContentAlignment="Center" Height="30" VerticalAlignment="Top" LostFocus="CatName_LostFocus"
              MouseRightButtonDown="CatName_MouseRightButtonDown">
            <TextBox.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Удалить категорию" Click="MenuItem_Click" />
                    <Separator/>
                    <MenuItem Name="DelCatFromNote" Header= "Удалить категорию у заметки" IsEnabled="False" Click="DelCatFromNote_Click"/>
                </ContextMenu>
            </TextBox.ContextMenu>
        </TextBox>

    </Grid>
</UserControl>
