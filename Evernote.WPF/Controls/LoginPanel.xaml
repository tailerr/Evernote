<UserControl x:Class="Evernote.WPF.Controls.LoginPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Evernote.WPF.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="300">
    <Grid>
        <Button Name="SignUpBtn" Content="Cоздать" Width="50" Grid.Column="0" Margin="165,170,0,0" Click="SignUpBtn_Click" HorizontalAlignment="Left" Height="20" VerticalAlignment="Top"/>
        <Label Name="Name" Content="Имя" Width="50" Margin="21,27,0,0" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>
        <TextBox Name="GetUserName" Width="141" Height="20" Margin="92,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Label Name="Password" Content="Пароль" Width="66" Margin="21,57,0,0" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>
        <PasswordBox Name="GetUserPass" Width="141" Height="20" Margin="92,62,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></PasswordBox>
        <Button Name="LoginBtn" Content="Войти" Margin="230,170,0,0" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="50" Click="LoginBtn_Click"></Button>
    </Grid>
</UserControl>
