<Window x:Class="Evernote.WPF.Forms.CreateNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evernote.WPF.Forms"
        mc:Ignorable="d"
        
        ResizeMode="NoResize"
        Title="Create Note" Height="300" Width="300">
    <Grid>
        <Button Name="btnOK" Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="20" Margin="0,0,75,10" IsDefault="True" Click="btnOK_Click"></Button>
        <Button Name="btnCancel" Content="Отмена" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="20" Margin="0,0,10,10" IsCancel="True"></Button>
        <Label Name="Head" Content="Заголовок" Width="66" Margin="21,27,0,0" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top"/>
        <TextBox Name="GetNoteHead" Width="50" Height="20" Margin="92,32,0,0" HorizontalAlignment="Left" VerticalAlignment="Top"></TextBox>
        <Label Name="Text" Content="Текст" Width="50" Height="25" Margin="21,57,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" ></Label>
        <TextBox Name="GetNoteText" Height="170" Margin="92,57,10,0" VerticalAlignment="Top"/>
    </Grid>
</Window>
