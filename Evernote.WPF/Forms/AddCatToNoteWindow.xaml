<Window x:Class="Evernote.WPF.Forms.AddCatToNoteWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Evernote.WPF.Forms"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="Добавить категорию к заметке" Height="200" Width="310">
    <Grid>
        <Label Content="Имя категории" Height="30" Margin="0,30,190,111"/>
        <TextBox Name="CatName" Height="30" Margin="104,30,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Width="177"/>
        <Button Name="btnOK" Content="Ok" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="20" Margin="0,0,75,10" IsDefault="True" Click="btnOK_Click"></Button>
        <Button Name="btnCancel" Content="Отмена" HorizontalAlignment="Right" VerticalAlignment="Bottom" Width="50" Height="20" Margin="0,0,10,10" IsCancel="True"></Button>

    </Grid>
</Window>
